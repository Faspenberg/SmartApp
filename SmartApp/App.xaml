             xmlns:local="clr-namespace:SmartApp"
             
             >

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources/FontsDictionary.xaml" />
